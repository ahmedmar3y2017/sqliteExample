<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ahmedmar3y.sqliteexample.MainActivity">


    <TextView
        android:id="@+id/mainText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EMPLOYEE"
        android:textAlignment="center"
        android:textColor="#0000ff"
        android:textSize="50px"


        />

    <TextView
        android:id="@+id/labelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainText"
        android:layout_marginBottom="60px"
        android:layout_marginLeft="25px"
        android:layout_marginTop="50px"
        android:text="Employee Name : "
        android:textSize="30px" />

    <EditText
        android:id="@+id/employeeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/labelName"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/labelName"
        android:layout_below="@+id/mainText"
        android:layout_marginRight="30px"
        android:width="200dp" >
        <requestFocus />

    </EditText>

    <TextView
        android:id="@+id/labelAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelName"
        android:layout_marginBottom="60px"
        android:layout_marginLeft="25px"
        android:layout_marginTop="50px"
        android:text="Employee Address : "
        android:textSize="30px"

        />

    <EditText
        android:id="@+id/employeeAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/labelAddress"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/labelAddress"
        android:layout_below="@+id/employeeName"
        android:layout_marginRight="30px"
        android:width="200dp" />

    <TextView
        android:id="@+id/labelSalary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelAddress"
        android:layout_marginBottom="60px"
        android:layout_marginLeft="25px"
        android:layout_marginTop="50px"
        android:text="Employee Salary : "
        android:textSize="30px"

        />

    <EditText
        android:id="@+id/employeeSalary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/labelSalary"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/labelSalary"
        android:layout_below="@+id/employeeAddress"
        android:layout_marginRight="30px"
        android:width="200dp" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/employeeSalary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Save Employee"
        android:textAlignment="center"
        android:onClick="saveButtonClick"

        />

    <Button
        android:id="@+id/showAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saveButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Show All"
        android:textAlignment="center"
        android:onClick="showAllClick"

        />


</RelativeLayout>
